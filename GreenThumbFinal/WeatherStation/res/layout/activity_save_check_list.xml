<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.concordia.sensortag.weather.SaveCheckListActivity" >

    <CheckBox
        android:id="@+id/checkBoxWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editName"
        android:layout_toRightOf="@+id/clearButton"
        android:text="Water" />

    <CheckBox
        android:id="@+id/checkBoxFertilize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxWater"
        android:layout_toRightOf="@+id/clearButton"
        android:text="Fertilize" />

    <CheckBox
        android:id="@+id/checkBoxPrune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxFertilize"
        android:layout_toRightOf="@+id/clearButton"
        android:text="Prune" />

    <CheckBox
        android:id="@+id/checkBoxRotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxPrune"
        android:layout_toRightOf="@+id/clearButton"
        android:text="Rotate" />

    <CheckBox
        android:id="@+id/checkBoxWeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxRotate"
        android:layout_toRightOf="@+id/clearButton"
        android:text="Weed" />

    <CheckBox
        android:id="@+id/checkBoxInsecticide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxWeed"
        android:layout_toRightOf="@+id/clearButton"
        android:text="Insecticide" />

    <CheckBox
        android:id="@+id/checkBoxGerminate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxInsecticide"
        android:layout_toRightOf="@+id/clearButton"
        android:text="Germinate" />

    <CheckBox
        android:id="@+id/checkBoxPlant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxGerminate"
        android:layout_toRightOf="@+id/clearButton"
        android:text="Plant" />

    <CheckBox
        android:id="@+id/checkBoxHarvest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxPlant"
        android:layout_toRightOf="@+id/clearButton"
        android:text="Harvest" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/clearButton"
        android:layout_alignBottom="@+id/clearButton"
        android:layout_alignRight="@+id/editName"
        android:text="Save" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/checkBoxHarvest"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="22dp"
        android:text="Clear" />

    <EditText
        android:id="@+id/editDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Enter Date:"
        android:inputType="date" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editDate"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter Name:" />

</RelativeLayout>