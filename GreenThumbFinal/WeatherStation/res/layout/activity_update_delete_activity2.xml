<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.concordia.sensortag.weather.UpdateDeleteActivity2" >

    <EditText
        android:id="@+id/editDate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Enter Date:"
        android:inputType="date" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editDate2"
        android:ems="10"
        android:hint="Enter Name:" />

    <CheckBox
        android:id="@+id/checkBoxWater2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editName2"
        android:layout_below="@+id/editName2"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="29dp"
        android:text="Water" />

    <CheckBox
        android:id="@+id/checkBoxFertilize2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editName2"
        android:layout_below="@+id/checkBoxWater2"
        android:layout_marginLeft="60dp"
        android:text="Fertilize" />

    <CheckBox
        android:id="@+id/checkBoxPrune2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editName2"
        android:layout_below="@+id/checkBoxFertilize2"
        android:layout_marginLeft="60dp"
        android:text="Prune" />

    <CheckBox
        android:id="@+id/checkBoxRotate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editName2"
        android:layout_below="@+id/checkBoxPrune2"
        android:layout_marginLeft="60dp"
        android:text="Rotate" />

    <CheckBox
        android:id="@+id/checkBoxPlant2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editName2"
        android:layout_below="@+id/checkBoxRotate2"
        android:layout_marginLeft="60dp"
        android:text="Plant" />

    <CheckBox
        android:id="@+id/checkBoxHarvest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editName2"
        android:layout_below="@+id/checkBoxPlant2"
        android:layout_marginLeft="60dp"
        android:text="Harvest" />

    <CheckBox
        android:id="@+id/checkBoxWeed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editName2"
        android:layout_below="@+id/checkBoxHarvest2"
        android:layout_marginLeft="60dp"
        android:text="Weed" />

    <CheckBox
        android:id="@+id/checkBoxGerminate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editName2"
        android:layout_below="@+id/checkBoxWeed2"
        android:layout_marginLeft="60dp"
        android:text="Germinate" />

    <CheckBox
        android:id="@+id/checkBoxInsecticide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editName2"
        android:layout_below="@+id/checkBoxGerminate2"
        android:layout_marginLeft="60dp"
        android:text="Insecticide" />

    <Button
        android:id="@+id/modifyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxInsecticide2"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/editName2"
        android:text="Modify" />

    <Button
        android:id="@+id/deleteButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/modifyButton"
        android:layout_alignBottom="@+id/modifyButton"
        android:layout_alignRight="@+id/editName2"
        android:layout_marginRight="32dp"
        android:text="Delete" />

    <Button
        android:id="@+id/clearButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/deleteButton2"
        android:layout_alignBottom="@+id/deleteButton2"
        android:layout_alignLeft="@+id/editName2"
        android:text="Clear" />

</RelativeLayout>